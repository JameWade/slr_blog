---
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";

const profile = SITE.profileHero;
const aboutParas = SITE.profileAbout ?? [];
---

<section id="about" class="app-prose mb-16 max-w-app">
  <div class="mb-4 text-xl font-semibold tracking-wide">关于我</div>
  <div class="text-sm text-app-dim">PHP 工程师 / 全栈开发</div>

  {aboutParas.length > 0 ? (
    <div class="mt-4 space-y-3">
      {aboutParas.map(p => <p>{p}</p>)}
    </div>
  ) : (
    <p class="mt-4">
      {profile?.intro ?? "这里是自我介绍。你可以在 src/config.ts 的 SITE.profileAbout 中配置多段文字。"}
    </p>
  )}

  {profile?.contactHref && (
    <div class="mt-4">
      <LinkButton href={profile.contactHref}>{profile.contactText ?? "更多关于我"}</LinkButton>
    </div>
  )}
</section>


