---
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";

const profile = SITE.profileHero;
const aboutParas = SITE.profileAbout ?? [];
---

<section id="about" class="app-prose mb-16 max-w-app">
  <div class="flex items-start gap-4">
    <div class="w-[120px] shrink-0 text-xl font-semibold tracking-wide text-foreground sm:w-[80px]">关于我</div>

    <div class="min-w-0 flex-1">
      
      {aboutParas.length > 0 ? (
        <div class="space-y-2">
          {aboutParas.map(p => <p class="text-app-dim">{p}</p>)}
        </div>
      ) : (
        <p class="text-app-dim">
          {profile?.intro ?? "这里是自我介绍。你可以在 src/config.ts 的 SITE.profileAbout 中配置多段文字。"}
        </p>
      )}
{profile?.contactHref && (
        <div class="mb-2 flex justify-end">
          <a
            href={profile.contactHref}
            class="text-xs text-app-dim underline decoration-dashed underline-offset-4 hover:text-accent"
          >
            获取联系
          </a>
        </div>
      )}
      
    </div>
  </div>
</section>


