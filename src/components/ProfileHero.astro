---
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
import IconGitHub from "@/assets/icons/IconGitHub.svg";
import IconLocation from "@/assets/icons/IconLocation.svg";

const profile = SITE.profileHero;
---

<section
  id="hero"
  class="relative overflow-hidden pt-12 pb-10 text-center"
>
  <div
    aria-hidden="true"
    class="pointer-events-none absolute inset-x-0 -top-24 z-[-1] h-64 bg-gradient-to-b from-app/40 to-transparent"
  />
  {profile?.avatar && (
    <img
      src={profile.avatar}
      alt={profile.name}
      width={96}
      height={96}
      class="mx-auto mb-4 h-24 w-24 rounded-full border border-app-border object-cover shadow-sm"
      loading="eager"
    />
  )}

  {profile?.name && (
    <h1 class="mb-2 text-4xl font-bold tracking-wide sm:text-5xl">{profile.name}</h1>
  )}

  {(profile?.location || profile?.githubUrl) && (
    <div class="mb-3 flex items-center justify-center gap-2 text-xs">
      {profile?.location && (
        <span class="inline-flex items-center gap-1 rounded-full border border-app-border/70 bg-app/40 px-2 py-0.5 text-app-dim">
          <IconLocation class="inline-block size-3 opacity-80" />
          {profile.location}
        </span>
      )}
      {profile?.githubUrl && (
        <a
          href={profile.githubUrl}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center gap-1 rounded-full border border-app-border/70 bg-app/40 px-2 py-0.5 text-app-dim underline-offset-4 hover:text-accent"
        >
          <IconGitHub class="inline-block size-3 opacity-80" />
          我的GitHub
        </a>
      )}
    </div>
  )}

  <div class="mb-3 flex items-center justify-center">
    <span class="inline-flex items-center gap-2 rounded-full border border-emerald-400/40 bg-emerald-400/10 px-3 py-1 text-xs text-emerald-300">
      <span class="inline-block size-2 rounded-full bg-emerald-400"></span>
      空闲中，与我取得联系
    </span>
  </div>

  {profile?.intro && (
    <p class="mx-auto max-w-3xl text-base text-app-dim">
      {profile.intro}
    </p>
  )}
</section>


